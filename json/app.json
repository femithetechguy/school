          "preload": ["episodes", "categories"],
          "lazy_load": true,
          "features": ["search", "filter", "pagination"]
        },
        "/videos": {
          "component": "VideosPage",
          "preload": ["playlists"],
          "lazy_load": true,
          "features": ["playlist_management", "video_player"]
        }
      },
      "static_routes": {
        "/about": {
          "type": "static_page",
          "template": "AboutPage",
          "seo_optimized": true
        },
        "/contact": {
          "type": "static_page", 
          "template": "ContactPage",
          "form_processing": true,
          "seo_optimized": true
        },
        "/resources": {
          "type": "static_page",
          "template": "ResourcesPage", 
          "download_tracking": true,
          "seo_optimized": true
        }
      },
      "hybrid_routes": {
        "/blog": {
          "type": "spa_listing",
          "component": "BlogListingPage",
          "features": ["search", "category_filter", "pagination"]
        },
        "/blog/:slug": {
          "type": "static_page",
          "template": "BlogArticlePage", 
