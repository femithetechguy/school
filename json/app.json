    "routing": {
      "spa_routes": {
        "/": {
          "component": "HomePage",
          "preload": ["featuredContent", "newsletter"],
          "lazy_load": true
        },
        "/curriculum": {
          "component": "CurriculumPage", 
          "preload": ["levels", "modules"],
          "lazy_load": true,
          "nested_routes": [
            "/curriculum/:level",
            "/curriculum/:level/:module"
